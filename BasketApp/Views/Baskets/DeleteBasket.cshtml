@model BasketApp.Models.Basket

@{
    ViewBag.Title = "Delete Basket";
}

<div class="pull-right">
    @Html.ActionLink("Back to Basket List", "BasketList", null, new { @class = "btn btn-default" })
</div>
<div class="clearfix"></div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Are you sure you want to delete this?</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete this Basket" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>
